<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Cliente</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="root">
        <div class="App">
            <div class="dashboard-container">
                <header class="dashboard-header">
                    <div style="width: 83px;"></div>
                    <button class="return-button" onclick="window.location.href='/adm'">&lt;</button>
                    <img alt="Raphietro Atelier Logo" class="dashboard-logo" src="/image/logo-raphietro-DpL_DJD5.png">
                    <button class="logout-button" onclick="window.location.href='/logout'">Sair</button>
                </header>
                <div class="dashboard-content">
                    <h2>Novo Cliente</h2>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <form action="/adm/clientes/novo" method="POST" class="form-novo-pedido">
                        <div>
                            <label class="label-forms-login" for="nome">Nome</label>
                            <input id="nome" name="nome" required>
                        </div>
                        <div>
                            <label class="label-forms-login" for="email">Email</label>
                            <input id="email" name="email" type="email" required>
                        </div>
                        <div>
                            <label class="label-forms-login" for="endereco">Endere√ßo</label>
                            <input id="endereco" name="endereco">
                        </div>
                        <div>
                            <label class="label-forms-login" for="sexo">Sexo</label>
                            <select id="sexo" name="sexo">
                                <option value="">Selecione</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outro">Outro</option>
                            </select>
                        </div>
                        <div>
                            <label class="label-forms-login" for="telefone">Telefone</label>
                            <input id="telefone" name="telefone">
                        </div>
                        <button type="submit" class="login-button">Criar Cliente</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>