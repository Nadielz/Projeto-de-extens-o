<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Pedido</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<%- include('partials/header', {titulo: 'Novo Pedido'}) %>
<body>
    <main>
        <h1>Novo Pedido</h1>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/pedidos/novo" method="POST" class="form-novo-pedido">
            <div>
                <label for="costureiro">Nome do Costureiro</label>
                <select id="costureiro" name="costureiro" required>
                    <% if (usuarios && usuarios.length > 0) { %>
                        <% usuarios.forEach(function(usuario) { %>
                            <option value="<%= usuario.User_ID %>"><%= usuario.Nome %></option>
                        <% }); %>
                    <% } else { %>
                        <option value="">Nenhum usuário encontrado</option>
                    <% } %>
                </select>
            <div>
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" required></textarea>
            </div>
            <div>
                <label for="valor">Valor Total</label>
                <input type="number" id="valor" name="valor" step="0.01" min="0" required>
            </div>
            <button type="submit">Salvar Pedido</button>
        </form>
    </main>
</body>
</html>
