<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Pedido</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="root">
        <div class="App">
            <div class="dashboard-container">
                <header class="dashboard-header">
                    <div style="width: 83px;"></div>
                    <button class="return-button" onclick="window.location.href='/'"><</button>
                    <img alt="Raphietro Atelier Logo" class="dashboard-logo" src="/image/logo-raphietro-DpL_DJD5.png">
                    <button class="logout-button" onclick="window.location.href='/logout'">Sair</button>
                </header>
                <div class="dashboard-content">
                    <h2>Novo Pedido</h2>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <form action="/pedidos/novo" method="POST" class="form-novo-pedido">
                        <div>
                            <label class="label-forms-login" for="costureiro">Nome do Costureiro</label>
                            <select id="costureiro" name="costureiro" required>
                                <% if (usuarios && usuarios.length > 0) { %>
                                    <% usuarios.forEach(function(usuario) { %>
                                        <option value="<%= usuario.User_ID %>"><%= usuario.Nome %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="">Nenhum usuário encontrado</option>
                                <% } %>
                            </select>
                        </div>
                        <div>
                            <label class="label-forms-login" for="cliente">Cliente</label>
                            <select id="cliente" name="cliente" required>
                                <% if (clientes && clientes.length > 0) { %>
                                    <% clientes.forEach(function(cliente) { %>
                                        <option value="<%= cliente.Cliente_ID %>"><%= cliente.Nome %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="">Nenhum cliente encontrado</option>
                                <% } %>
                            </select>
                        </div>
                        <div>
                            <label class="label-forms-login" for="descricao">Descrição</label>
                            <textarea id="descricao" name="descricao" required></textarea>
                        </div>
                        <div>
                            <label class="label-forms-login" for="valor">Valor Total</label>
                            <input type="number" id="valor" name="valor" step="0.01" min="0" required>
                        </div>
                        <button type="submit" class="login-button">Salvar Pedido</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
